/* SWITCH */
.TB-Switch {
	$ssize = 8px;

	.MuiSwitch-root {
		width: $ssize * 4;
		height: $ssize * 4;
		padding: $ssize;
		padding-left: 1px;
		padding-right: 1px;
	}

	.MuiSwitch-switchBase {
		padding: $ssize * 1;
		padding-left: 0;
		padding-right: 0;
	}

	.MuiSwitch-switchBase.Mui-checked {
		// transform: translateX(100%);
		opacity: 1;
	}

	.MuiIconButton-root:hover {
		background: none !important;
	}

	.MuiSwitch-thumb {
		width: $ssize * 2;
		height: $ssize * 2;
		background: var(--hrTagColor) !important;
		opacity: 1 !important;
		box-shadow: 0 0 1px rgba(0, 0, 0, 0.1);
	}

	&:hover .MuiSwitch-thumb {
		opacity: 1 !important;
	}

	.Mui-checked .MuiSwitch-thumb {
		background: var(--accentColor) !important;
		opacity: 1 !important;
	}

	&:hover .Mui-checked .MuiSwitch-thumb {
		background: var(--accentColor2) !important;
	}

	.MuiSwitch-track {
		border-radius: $ssize * 4;
		opacity: 1 !important;
		background: var(--darkColor) !important;
		box-shadow: inset 1px 1px 0 rgba(0, 0, 0, 0.3);

		body.isLight & {
			box-shadow: inset 1px 1px 0 rgba(0, 0, 0, 0.1);
		}
	}
}

