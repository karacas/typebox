.svgLineIcon {
	svg {
		position: absolute;
		left: -2px;
		top: -2px;
		right: 0;
		bottom: 0;
		margin: 0;
		padding: 0;
		width: 17px !important;
		height: 17px !important;
		stroke: var(--accentColor);
		stroke-width: 2;
		background: transparent !important;
		opacity: 1;
		stroke-linecap: square;
		stroke-linejoin: miter;
		fill: transparent !important;
		color: transparent !important;

		path {
			opacity: 1;
			fill: transparent !important;
		}
	}

	&.hover svg {
		position: absolute;
		stroke-width: 1.5;
		left: 8px;
		stroke: #fff;
	}

	&.white svg {
		stroke: #fff;
	}

	&.white.hover svg {
		stroke: #fff;
		opacity: 1 !important;
	}
}

