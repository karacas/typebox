/* REACT SELECT */
.TB-select {
	outline: none !important;
	min-width: 110px;
	opacity: 1;
	border: none !important;
	user-select: none;
	cursor: pointer;

	.react-select__control {
		background-color: transparent;
		outline: none;
		box-shadow: none;
		border-color: transparent;
		cursor: pointer;
		border-radius: var(--radBorder);
		min-height: 32px;
		border: none !important;

		.react-select__single-value {
			font-weight: var(--smallFontWeight);
			top: calc(50% + 0);
			color: var(--textHighColor);
			opacity: var(--medOpacity);
		}

		&:hover, &.react-select__control--is-focused {
			background-color: var(--hoverColor);
			opacity: 1;

			.react-select__single-value {
				color: var(--accentColor);
				opacity: 1;
			}

			.react-select__value-container--has-value, .react-select__value-container--has-value div {
				color: var(--textHighColor);
				opacity: 1;
			}
		}
	}

	.react-select__input > input {
		caret-color: var(--accentColor);
	}

	&.TB-select-mini {
		font-size: var(--smallFontSize);
		font-weight: var(--smallFontWeight);

		.react-select__single-value {
			font-size: var(--smallFontSize);
			font-weight: var(--smallFontWeight);
		}

		.react-select__input > input {
			font-size: var(--smallFontSize);
			font-weight: var(--smallFontWeight);
		}

		.react-select__single-value {
			font-size: var(--smallFontSize);
		}

		.react-select__menu {
			padding-top: calc(var(--padding) * 0.5);
			padding-bottom: calc(var(--padding) * 0.25);
			font-size: var(--smallFontSize);
			font-weight: var(--smallFontWeight);
		}
	}

	.react-select__indicators {
		.react-select__indicator-separator {
			display: none;
		}

		.react-select__dropdown-indicator {
			pointer-events: none;
			padding: 4px;
			padding-right: 8px;

			svg {
				color: var(--accentColor);
			}
		}

		pointer-events: none;
		max-height: 32px;
		opacity: 0;
		MX_transition(0.2s);
	}

	&.TB-select-top .react-select__indicators .react-select__dropdown-indicator svg {
		transform: scale(-1);
	}

	&:hover, .react-select__control--is-focused {
		.react-select__indicators {
			opacity: 1;
		}
	}

	.react-select__menu {
		background: var(--darkColor);
		border-radius: var(--radBorder) !important;
		box-shadow: none;
		border: none !important;
		margin: 0;
		padding: 0;
		MX_transition(0.2s);
	}

	.react-select__menu-list {
		@extend scrollExtend;
		box-shadow: none;
		border: none !important;
		padding: 0;

		&::-webkit-scrollbar, &::-webkit-scrollbar-track {
			background: transparent !important;
			width: 3px;
		}

		&::-webkit-scrollbar-thumb:vertical {
			border-right: solid 2px var(--accentColor);

			&:hover {
				border-right: solid 2px var(--accentColor);
			}
		}

		.react-select__option {
			padding: 8px 10px !important;
			height: 32px;
			cursor: pointer;
		}

		.react-select__option--is-selected {
			background-color: transparent;
			color: var(--accentColor);
			// border-bottom: solid 1px var(--backLightColor);
		}

		.react-select__option--is-focused {
			background-color: var(--backLightColor);
			background-color: transparent;
			color: var(--textHighColor);
			MX_transition(0.2s);
		}
	}

	.react-select__control--menu-is-open .react-select__single-value {
		opacity: 0.3 !important;
	}

	&.TB-select-withBack .react-select__control {
		background-color: var(--darkColor);
		opacity: 1;

		.react-select__indicators {
			opacity: 1;
		}
	}
}

.TB-input-text {
	min-width: 120px;
	border: none;
	border-color: transparent;
	letter-spacing: 0.25px;
	font-size: var(--smallFontSize);
	font-weight: var(--smallFontWeight);

	&.TB-input-samll-font {
		font-size: var(--smallFontSize);
	}

	background-color: var(--darkColor);
	color: var(--textHighColor);
	caret-color: var(--textHighColor) !important;
	outline: none;
	box-shadow: none;
	border-radius: var(--radBorder) !important;
	max-height: 32px;
	line-height: 30px;
	padding-left: calc(var(--padding) * 0.6);
	padding-right: calc(var(--padding) * 0.6);
	width: calc(100% - (1.2 * var(--padding)));
	padding-top: 2px;
	padding-bottom: 0;

	&::placeholder {
		color: var(--textLowColor);
		opacity: var(--medOpacity);
	}

	&:focus {
		animation: focusAnim calc(0.2s * var(--animSpeedFactor)) ease-in;
	}
}

/* BUTTON */
.TB-Button {
	MX_transition(0.2s);
	padding: 0 10px;
	cursor: pointer;
	text-align: center;
	min-width: 16px;
	height: 32px;
	display: flex;
	align-items: center;
	justify-content: center;
	border-radius: var(--radBorder);
	opacity: var(--hiOpacity);
	font-size: var(--smallFontSize);
	font-weight: var(--smallFontWeight);
	margin-left: 1px;
	margin-right: 1px;
	user-select: none;
	color: var(--textHighColor);
	opacity: var(--medOpacity);

	.tb-icon:before, i:before {
		font-size: 18px !important;
	}

	svg {
		width: 18px;
		height: auto;
	}

	&:not(.TB-Button-no-hover):focus, &:not(.TB-Button-no-hover):hover {
		background-color: var(--hoverColor); /* 0.05 en light */
		color: var(--textHighColor);
		opacity: 1;
	}

	&.TB-Button-force-hover {
		background-color: var(--hoverColor); /* 0.05 en light */
	}

	&.TB-Button-accent {
		&, .tb-icon:before, i:before {
			color: var(--accentColor);
			opacity: 1 !important;
		}
	}

	&.TB-Button-noLow {
		&, .tb-icon:before, i:before {
			color: var(--textHighColor);
			opacity: var(--medOpacity);
		}

		&:hover, &:hover .tb-icon:before, &:hover i:before {
			color: var(--textHighColor);
			opacity: 1 !important;
		}
	}

	&.TB-Button-accent-hover {
		:hover, &:hover .tb-icon:before, &:hover i:before {
			color: var(--accentColor);
			opacity: 1 !important;
		}
	}

	&.TB-Button-no-hover {
		cursor: default;
	}

	&.TB-Button-no-backhover {
		background: none !important;
	}

	&.TB-Button-disabled {
		pointer-events: none !important;
	}

	&.TB-Button-left {
		justify-content: left;
	}

	&.TB-Button-warn {
		color: var(--warnColor) !important;
		opacity: 1 !important;
	}

	&.TB-Button-error {
		color: var(--errorColor) !important;
		opacity: 1 !important;
	}

	&.TB-Button-valid {
		color: var(--validColor) !important;
		opacity: 1 !important;
	}

	&.TB-Button-asert {
		color: var(--asertColor) !important;
		opacity: 1 !important;

		span:hover {
			color: var(--textHighColor) !important;
		}
	}
}

/* OPTIONS COMPO */
.TB-Options-box {
	width: 100%;

	#ruleViewerWrappSize.smallViewer & {
